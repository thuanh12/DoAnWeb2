<!DOCTYPE html>
<html>
<head>
    <title>Login Page</title>
	<!--Made with love by Mutiullah Samim -->

	<!--Bootsrap 4 CDN-->
	<script src="js/jquery-1.4.2.min.js"></script>

	<link href="css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
	<script src="js/bootstrap.min.js"></script>
	<!------ Include the above in your HEAD tag ---------->
	
	<link rel="stylesheet" href="css/bootstrap.min.css"
		integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

	<!--Fontawesome CDN-->
	<link rel="stylesheet" href="css/bootstrap.min.css"
		integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

	<!--Custom styles-->    
	<link rel="stylesheet" href="css/style.css" type="text/css" media="all" />
	<!--[if IE 6]>
		<link rel="stylesheet" href="css/ie6.css" type="text/css" media="all" />
	<![endif]-->
	<script type="text/javascript" src="js/jquery-func.js"></script>
	<script src="js/jquery.js"></script>

</head>
<body> 
<!-- Shell -->
<div id="shell">

	<!-- Header -->
	<% include header.ejs %>
    <!-- end Header -->
    <!-- start Main-->
    <div class="container-fluid">
        <div class="row">
            <div style="width: 17%;float:left;margin-left: 1%;margin-top: 40px;">
                <ul class="nav nav-sidebar">
                    <li >
                        <a href="/user?id=<%=user.id%>" style="background-color:cyan;">Your Profile</a>
                    </li>
                    <li>
                        <a href="/boolkingTicketList?id=<%=user.id%>">Booking Ticket History</a>
                    </li>
                    <%if (user.rule === 'admin') {%>
                        <li>
                            <a href="/admincinema?id=<%=user.id%>">Manage Cinema</a>
                        </li>
                        <li>
                            <a href="/admincinemaroom?id=<%=user.id%>">Manage Cinema Room</a>
                        </li>
                    <%}%>
                </ul>
            </div>
            <div style="width: 85%;margin-left: 18%;">
                <div style="margin-top: 40px;">
                    <form id = "user-infor" method="POST" action="/editUser">
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Full Name</label>
                            <input type = "hidden" name = "id" value="<%=user.id%>">
                            <input type="text" class="form-control"  name = "fullname" value="<%=user.fullname%>">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Email</label>
                            <input type="email" class="form-control" name = "email" value = "<%=user.email%>">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Password</label>
                            <input type="password" class="form-control"  name = "password" value="<%=user.password%>">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Telephone</label>
                            <input type="number" class="form-control" name = "telephone" value="<%=user.telephone%>">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Rule</label>
                            <div class="form-control"><%=user.rule%></div>
                        </div>
                        <input type="submit" class="btn btn-success" id="exampleFormControlInput1" value = "Save">
                        <a href = "/" class="btn btn-default" style="text-decoration: none;">Cancel</a>
                    </form>
                </div>
                <div class="progress" id="spinner-id" hidden>
                    <div class="progress-bar progress-bar-striped active"
                            role="progressbar" aria-valuenow="45"
                            aria-valuemin="0" aria-valuemax="100"
                            style="width: 100%">
                    </div>
                </div>
            </div>
        </div>
        <input type="hidden" id="contextPath" value="{{contextPath}}"/>
</div>
	<!-- end Main -->
    <!-- Footer -->
    <div style="margin-top: 250px;">
        <% include footer.ejs %>
    </div>	
	<!-- end Footer -->
</div>
<!-- end Shell -->
</body>
</html>